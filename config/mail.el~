;; msmtp -- for sending emails from Emacs
(setq send-mail-function 'sendmail-send-it
      message-send-mail-function 'message-send-mail-with-sendmail
      sendmail-program "/usr/bin/msmtp"
      mail-specify-envelope-from t
      message-sendmail-envelope-from 'header)
;; Set my email address
(setq user-mail-address "support@akabanedai-fes.com")
;; Default Cc and Bcc headers for new emails
(setq message-default-mail-headers
      "Cc: \nBcc: \n")

;; Save email drafts to a specific directory
(setq message-auto-save-directory "~/.emacs.d/maildrafts")
;; Use 'message' as the default mail user agent
(setq mail-user-agent 'message-user-
